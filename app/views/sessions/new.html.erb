<div id="login" class="panel panel-small">
  <h2>Sign in</h2>
  <% form_tag session_path do -%>
    <fieldset>
      <div class="field">
        <label for="login">Login</label>
        <%= text_field_tag 'login',"", :size =>'30' %>
      </div>

      <div class="field">
        <label for="password">Password</label>
        <%= password_field_tag 'password', "",:size =>'30' %>
      </div>

      <label for="remember_me">Remember me:</label>
      <%= check_box_tag 'remember_me' %>
    </fieldset>
  
    <fieldset class="submit">
      <p>New user? <%= link_to 'Sign up!', signup_path %>  </p>
      <%= submit_tag 'Log in',:name => 'commit', :class => "submit" %>
    </fieldset>
  <% end -%>
</div>